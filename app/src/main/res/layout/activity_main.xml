<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:scaleType="fitStart"
            android:contentDescription="@string/select_image_for_text_recognition"/>

    <com.google.firebase.codelab.mlkit.GraphicOverlay android:layout_width="match_parent"
                                                      android:layout_height="match_parent"
                                                      android:id="@+id/graphic_overlay"
                                                      app:layout_constraintEnd_toEndOf="@id/image_view"
                                                      app:layout_constraintBottom_toBottomOf="@id/image_view"
                                                      app:layout_constraintRight_toRightOf="@id/image_view"
                                                      app:layout_constraintLeft_toLeftOf="@id/image_view"/>
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toTopOf="@id/button_text"/>
    <Button
            android:text="@string/find_text_button"
            android:layout_width="0dp"
            android:layout_height="55dp" android:id="@+id/button_text" app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/find_face_contour_button"
            android:layout_width="0dp"
            android:layout_height="55dp" android:id="@+id/button_face"
            app:layout_constraintLeft_toRightOf="@id/button_text"
            app:layout_constraintRight_toLeftOf="@id/button_cloud_text"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/find_text_cloud_button"
            android:layout_width="0dp"
            android:layout_height="55dp" android:id="@+id/button_cloud_text"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toRightOf="@id/button_face"
            app:layout_constraintRight_toLeftOf="@id/button_run_custom_model"/>
    <Button
            android:text="@string/find_objects_button"
            android:layout_width="0dp"
            android:layout_height="55dp" android:id="@+id/button_run_custom_model"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button_cloud_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>